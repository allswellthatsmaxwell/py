{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src", "."],
  "exclude": ["node_modules", "babel.config.js"]
}